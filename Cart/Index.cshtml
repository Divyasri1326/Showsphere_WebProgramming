@model List<ShowSphere.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
    var total = Model.Sum(item => item.Total);
    var totalItems = Model.Sum(item => item.Quantity);
}

<div class="container my-5">
    <div class="card shadow-sm p-4 rounded-4">
        <div class="d-flex justify-content-between mb-3">
            <h4 class="fw-bold">Shopping Cart</h4>
            <form asp-action="Clear" asp-controller="Cart" method="post">
                <button type="submit" class="btn btn-link text-danger p-0">Remove all</button>
            </form>
        </div>

        @foreach (var item in Model)
        {
            <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                
                    <h5 class="mb-1">@item.Title</h5>
                <p class="text-muted mb-1">@item.Category</p> <!-- Only if you have a 'Category' field -->
                
                    <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-inline-flex align-items-center">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" name="action" value="increase" class="btn btn-light rounded-circle px-2 me-2">+</button>
                        <span class="mx-2">@item.Quantity</span>
                        <button type="submit" name="action" value="decrease" class="btn btn-light rounded-circle px-2">-</button>
                    </form>
            
                <div class="text-end">
                    <div class="fw-bold mb-1">$@item.Total.ToString("0.00")</div>
                    <a href="#" class="d-block small text-decoration-none text-muted">Save for later</a>
                    <form asp-action="Remove" asp-controller="Cart" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-link text-danger p-0 small">Remove</button>
                    </form>
                </div>
           </div>
        }

        <!-- Subtotal -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <div class="text-muted">Sub-Total<br /><small>@totalItems item(s)</small></div>
            <div class="fs-4 fw-bold">$@total.ToString("0.00")</div>
        </div>

        <!-- Checkout Button -->
       
        <form asp-controller="Payment" asp-action="Create" method="get" class="mt-3 text-end">
            <input type="hidden" name="bookingId" value="5" />
            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Checkout</button>
        </form>

    </div>
</div>



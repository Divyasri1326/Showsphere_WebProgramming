@model ShowSphere.Models.Payment

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="CardNumber"></label>
        <input asp-for="CardNumber" class="form-control" maxlength="16" required />
    </div>

    <div class="form-group">
        <label asp-for="CVV"></label>
        <input asp-for="CVV" class="form-control" type="number" maxlength="4" required />
    </div>

    <div class="form-group">
        <label asp-for="ExpiryDate"></label>
        <input asp-for="ExpiryDate" class="form-control" type="date" required />
    </div>

    <button type="submit" class="btn btn-success">Make Payment</button>
</form>

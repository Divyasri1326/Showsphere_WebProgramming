@model ShowSphere.Models.Booking

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Fullname"></label>
        <input asp-for="Fullname" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" required />
    </div>


    <div class="form-group">
        <label asp-for="NoOfTicket"></label>
        <input asp-for="NoOfTicket" type="number" class="form-control" min="1" required />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" type="time" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Pay Now</button>
</form>
